pipeline {
    agent any
 tools{
        nodejs 'Nodejs'
    
    stages {
        stage('Checkout') {
            steps {
                git branch: main , url: 'https://github.com/bhumisachdev12/devops'
            }
        }
        
        stage('Build') {
            steps {
                
                bat 'npm install'
              
        }
        }
        stage('Test') {
            steps {
               
                  bat 'npm test || echo "No tests defined"'
             
            }
        }
        
        stage('Deploy') {
            steps {
               
                 bat 'npm run build' 
               
            }
        }
    }
}
}
